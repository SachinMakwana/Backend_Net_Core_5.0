@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "PlacementAdd"; }


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content" style="margin-top:20px;">
        <div class="row">
            <div class="col-md-12">
                <a href="@Url.Action("PlacementView","PlacementCell")">
                    <ol class="breadcrumb float-sm-right">
                        <li style="margin-left: 00px;"><i class="nav-icon fas fa-minus-circle"></i></li>
                        <li style="margin-left: px;">Back to Details</li>
                    </ol>
                </a>
            </div>
            <div class="col-md-12">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <!-- your contents here -->
                            <!-- form start -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Add New Placement Details</h3>
                                </div>
                                <form role="form">
                                    <div class="card-body">
                                        <div class="form-group row justify-content-center">
                                            <div class="col-11">
                                                <div class="form-group">
                                                    <!---->
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <div class="col-md-6">
                                                                <label for="ddlCompany">Company Name</label>
                                                                <select class="form-control select2" style="width: 100%;" id="ddlCompany">
                                                                    <option selected="selected" disabled>
                                                                        Select Company
                                                                    </option>
                                                                    <option>Microsoft</option>
                                                                    <option>L & T PVT LTD</option>
                                                                    <option>Infosys</option>
                                                                    <option>TCS</option>
                                                                    <option>Infochips</option>
                                                                </select>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label for="ddlDepartment">Department Name</label>
                                                                <select class="form-control select2" style="width: 100%;" id="ddlDepartment">
                                                                    <option>Computer</option>
                                                                    <option>Civil</option>
                                                                    <option>Mechanical</option>
                                                                    <option>Eletrical</option>
                                                                    <option>Electronics & Communications</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">

                                                        <div class="input-group">
                                                            <div class="col-md-3">
                                                                <label for="studentTaken">Students Taken</label>
                                                                <input type="number" class="form-control" id="studentTaken" placeholder="No. Of Students Taken">
                                                            </div>

                                                            <div class="col-md-3">
                                                                <label for="lowestPackage">Lowest Package</label>
                                                                <input type="number" class="form-control" id="lowestPackage" placeholder="Lowest Package">
                                                            </div>

                                                            <div class="col-md-3">
                                                                <label for="highestPackage">Highest Package</label>
                                                                <input type="number" class="form-control" id="highestPackage" placeholder="Highest Package">
                                                            </div>

                                                            <div class="col-md-3">
                                                                <label for="dateofcampus">Date Of Campus</label>
                                                                <div class="input-group">
                                                                    <div class="input-group-prepend">
                                                                        <span class="input-group-text">
                                                                            <i class="far fa-calendar-alt"></i>
                                                                        </span>
                                                                    </div>
                                                                    <input id="dateofcampus" type="text" class="form-control datemask" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->

                                    <div class="card-footer">
                                        <div class="input-group col-12">
                                            <div class="col-sm-6"><button type="submit" class="btn btn-primary float-right col-md-2">Submit</button></div>
                                            <div class="col-sm-6"><button type="clear" class="btn btn-primary col-md-2">Clear</button></div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.card -->

                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
