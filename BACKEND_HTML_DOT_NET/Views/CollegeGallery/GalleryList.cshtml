@model List<BACKEND_HTML_DOT_NET.Models.GalleryVM>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "GalleryList"; 
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Gallery Details</h1>
                </div>
                <div class="col-sm-6" style="margin-top:10px;">
                    <a href="@Url.Action("GalleryAdd","CollegeGallery")" >
                        <ol class="breadcrumb float-sm-right">
                            <li><i class="nav-icon fas fa-plus-circle"></i></li>
                            <li>Add New Details</li>
                        </ol>
                    </a>
                </div>
                <div class="container-fluid">
                    <!-- <div class="row">
                       <form>
                        <button type="submit" class="btn btn-info" style="margin-left: 916px;margin-top: -56px;"><a href="about.html" style="color: white;">ADD NEW DETAILS</a></button>


                            </form>
                    </div>
                    </div> -->
                    <!-- <div class="col-sm-6">
                      <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                      </ol>
                    </div> -->
                </div>
            </div>
            <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="card-title" style="font-size: 25px;">List Of Gallery </h1>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>GalleryTagId</th>
                                        <th>Name</th>
                                        <th>Extension</th>
                                        <th>Image</th>
                                        <th>View</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model){
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.GalleryTagId
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Extension
                                        </td>
                                        <td>
                                            @item.Image
                                        </td>
                                         <td>
                                            <a href="@Url.Action("GalleryView","CollegeGallery",new {@id=item.Id})" class="nav-icon fas fa-edit"></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("GalleryAdd","CollegeGallery",new {@id=item.Id})" class="nav-icon fas fa-edit"></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("GalleryAdd","CollegeGallery",new {@id=item.Id})"><i class="nav-icon fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                  }  
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>GalleryTagId</th>
                                        <th>Name</th>
                                        <th>Extension</th>
                                        <th>Image</th>
                                        <th>View</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
    </section>
        <!-- /.row -->
</div>
<!-- /.container-fluid -->
           