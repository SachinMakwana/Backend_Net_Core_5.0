@model List<BACKEND_HTML_DOT_NET.Models.FacultyDetailsVM>

@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "FacultyAdd"; }

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content" style="margin-top:20px;">
        <div class="row">
            <div class="col-md-12">
                <a href="@Url.Action("FacultyList","FacultyDetails")">
                    <ol class="breadcrumb float-sm-right">
                        <li style="margin-left: 00px;"><i class="nav-icon fas fa-minus-circle"></i> </li>
                        <li style="margin-left: 00px;">Back to Details</li>
                    </ol>
                </a>
            </div>
            <div class="col-md-12">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <!-- your contents here -->
                            <!-- form start -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Add New Faculty</h3>
                                </div>
                                <form id="facultyadd" name="facultyadd" role="form">
                                    <div class="card-body">
                                        <div class="form-group">

                                            <!-- Name Controls -->
                                            <div class="form-group">
                                                <div class="input-group col-12">

                                                    <div class="col-md-3">
                                                        <label for="name">Name</label>
                                                        <input name="name" type="text" class="form-control" id="name"
                                                               placeholder="Name">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="input-group col-12">
                                                    <div class="col-md-2">
                                                        <label for="ddldesgn">Designation ID</label>
                                                        <input name="DesignationId" type="number" class="form-control" id="DesignationId"
                                                               placeholder="Designation ID">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="input-group col-12">

                                                    <div class="col-md-3">
                                                        <label for="department">Department ID</label>
                                                        <input name="deptid" type="number" class="form-control" id="department"
                                                               placeholder="Department ID">
                                                    </div>

                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <!-- /.card-body -->

                                    <div class="card-footer">
                                        <div class="input-group col-12">
                                            <div class="col-sm-6">
                                                <button type="button"
                                                        class="btn btn-primary float-right col-md-2" id="btnSubmit">
                                                    Submit
                                                </button>
                                            </div>
                                            <div class="col-sm-6">
                                                <button type="button"
                                                        class="btn btn-default col-md-2">
                                                    Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.card -->

                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>

@section script{
    <script src="@Url.Content("~/css/plugins/sweetalert2/sweetalert2.min.js")"></script>
    <script type="text/javascript">


    $(document).ready(function() {
        //console.log( "ready!" );

        $('#facultyadd').validate({
          rules: {
            "name": {
                 required: true
             },
             "DesignationId": {
                 required: true
             },
             "deptid": {
                 required: true
             }

          },
          messages: {
            "name": {
                 required: "this field is required"
             },
             "DesignationId": {
                 required: "this field is required"
             },
             "deptid": {
                 required: "this field is required"
             }
          }


        });

        $('#btnSubmit').click(function(e) {

            if ($('#facultyadd').valid()) {
                var data = $('#facultyadd').serialize();



                        $.ajax({
                            url: '@Url.Action("FacultyAdd","FacultyDetails")',
                            type: 'post',
                            data: data,
                            success: function(data) {
                               if (data.status_code == "200") {
                                    Swal.fire({
                                        title: "Added!",
                                        text: data.message,
                                        timer: 6000,
                                        type: "success"
                                    }).then(function () {
                                        $('#facultyadd')[0].reset();
                                        window.location.href='@Url.Action("FacultyList","FacultyDetails")';
                                    });
                                }
                            }
                        });

            }
        });


    });

    </script>

}
@section styles{
    <link rel="stylesheet" href="@Url.Content("~/css/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css")">
}